{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Lista dokumentów</h1>
<table>
    <tr>
        <th>Numer</th><th>Treść</th><th>Data publikacji</th><th>Strona projektu uchwały</th>
    </tr>
    {% for item in resolutionProjects %}
        <tr>
            <td>{{ item.number }}</td>
            <td>{{ item.content }}</td>
            <td>{{ item.date|date("Y-m-d h:i:s") }}</td>
            <td><a href="/resolutionproject/{{ item.number }}">Link</a> </td>
        </tr>
    {% endfor %}
</table>

</div>
{% endblock %}
